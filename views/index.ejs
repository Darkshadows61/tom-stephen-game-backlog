            <div class="navBucket">
                <button class="bucketButton">About
                    <i></i>
                </button>
                <div class="bucketItems">
                    <a href="/about">About</a>
                    <a href="/contact">Contact</a>
                </div>
            </div>
            <div class="title">
                <p>Game Backlog</p>
            </div>
        </nav>

    <body>
        <main>
            <section id="allSubmit">
                <section id="tomSubmit">
                    <h3>Tom: Add a new game</h3>
                    <form action="addTomGame" method="POST">
                        <input type="text" placeholder="Name" name="name">
                        <input type="text" placeholder="Platform" name="platform">
                        <button type="submit">Submit</button>
                    </form>
                </section>

                <section id="stephenSubmit">
                    <h3>Stephen: Add a new game</h3>
                    <form action="addStephenGame" method="POST">
                        <input type="text" placeholder="Name" name="name">
                        <input type="text" placeholder="Platform" name="platform">
                        <button type="submit">Submit</button>
                    </form>
                </section>

                <section id="seanSubmit">
                    <h3>Sean: Add a new game</h3>
                    <form action="addSeanGame" method="POST">
                        <input type="text" placeholder="Name" name="name">
                        <input type="text" placeholder="Platform" name="platform">
                        <button type="submit">Submit</button>
                    </form>
                </section>
            </section>

            <section id="allBacklog">
                <section id="tomContainerBacklog">
                    <h2>Tom Backlog</h2>
                    <ul class="tomMasterList">
                        <% for (let i=0; i < tomBacklog.length; i++ ) {%>
                            <li class ='tomList'>
                                <span id="tom-game-name"><%= tomBacklog[i].name %></span>
                                <span id="tom-game-platform" hidden="true"><%= tomBacklog[i].platform %></span>
                                Likes:<span id="tom-game-likes"><%= tomBacklog[i].likes %></span>
                                <% if (tomBacklog[i].platform == 'Xbox') { %>
                                    <img src='style/images/Xbox.png' height="10%" width="10%">
                                <% } else if (tomBacklog[i].platform == 'Switch') { %>
                                    <img src='style/images/Switch.png' height="7%" width="10%">
                                <% } else if (tomBacklog[i].platform == 'Gameboy') { %>
                                    <img src='style/images/Gameboy.png' height="15" width="20%">
                                <% } else if (tomBacklog[i].platform == 'PS4') { %>
                                    <img src='style/images/PSN.png' height="15%" width="15%">
                                <% } %>
                                <span id='tom-thumbs-up' class='fa fa-thumbs-up'></span>
                                <span id='tom-thumbs-down'><i class="fa-solid fa-thumbs-down"></i></span>
                                <span id='tom-trash' class='fa fa-trash'></span>
                                <span id='tom-finish'><i class="fa-solid fa-flag-checkered"></i></span>
                            </li>
                        <% } %>
                    </ul>
                </section>

                <section id="stephenContainerBacklog">
                    <h2>Stephen Backlog</h2>
                    <ul class="stephenMasterList">
                        <% for (let i=0; i < stephenBacklog.length; i++ ) {%>
                            <li class= stephenList'>
                                <span id="stephen-game-name"><%= stephenBacklog[i].name %></span>
                                <span id="stephen-platform-name" hidden="true"><%= stephenBacklog[i].platform %></span>
                                <span id="stephen-game-likes"><%= stephenBacklog[i].likes %></span>
                                <% if (stephenBacklog[i].platform == 'Xbox') { %>
                                    <img src='style/images/Xbox.png' height="10%" width="10%">
                                <% } else if (stephenBacklog[i].platform == 'Switch') { %>
                                    <img src='style/images/Switch.png' height="7%" width="10%">
                                <% } else if (stephenBacklog[i].platform == 'Gameboy') { %>
                                    <img src='style/images/Gameboy.png' height="15" width="20%">
                                <% } else if (stephenBacklog[i].platform == 'PS4') { %>
                                    <img src='style/images/PSN.png' height="15%" width="15%">
                                <% } else if (stephenBacklog[i].platform == 'PS5') { %>
                                    <img src='style/images/PSN.png' height="15%" width="15%">
                                <% } %>
                                <span id='stephen-thumbs-up' class='fa fa-thumbs-up'></span>
                                <span id='stephen-thumbs-down'><i class="fa-solid fa-thumbs-down"></i></span>
                                <span id='stephen-finish'><i class="fa-solid fa-flag-checkered"></i></span>
                                <span id='stephen-trash' class='fa fa-trash'></span>
                            </li>
                        <% } %>
                    </ul>
                </section>

                <section id="seanContainerBacklog">
                    <h2>Sean Backlog</h2>
                    <ul class="seanMasterList">
                        <% for (let i=0; i < seanBacklog.length; i++ ) {%>
                            <li class ='tomList'>
                                <span id="sean-game-name"><%= seanBacklog[i].name %></span>
                                <span id="sean-game-platform" hidden="true"><%= seanBacklog[i].platform %></span>
                                <span id="sean-game-likes"><%= seanBacklog[i].likes %></span>
                                <% if (seanBacklog[i].platform == 'Xbox') { %>
                                    <img src='style/images/Xbox.png' height="10%" width="10%">
                                <% } else if (seanBacklog[i].platform == 'Switch') { %>
                                    <img src='style/images/Switch.png' height="7%" width="10%">
                                <% } else if (seanBacklog[i].platform == 'Gameboy') { %>
                                    <img src='style/images/Gameboy.png' height="15" width="20%">
                                <% } else if (seanBacklog[i].platform == 'PS4') { %>
                                    <img src='style/images/PSN.png' height="15%" width="15%">
                                <% } %>
                                <span id='sean-thumbs-up' class='fa fa-thumbs-up'></span>
                                <span id='sean-thumbs-down'><i class="fa-solid fa-thumbs-down"></i></span>
                                <span id='sean-trash' class='fa fa-trash'></span>
                                <span id='sean-finish'><i class="fa-solid fa-flag-checkered"></i></span>
                            </li>
                        <% } %>
                    </ul>
                </section>
            </section>

            <section id="allComplete">
                <section id="tomContainerComplete">
                    <h2>Tom Complete</h2>
                    <ul class="tomCompleteList">
                        <% for (let i=0; i < tomBacklogComplete.length; i++ ) {%>
                            <li class ='tomList'>
                                <span><%= tomBacklogComplete[i].name %></span>
                                <span><%= tomBacklogComplete[i].platform %></span>
                                <span><%= tomBacklogComplete[i].likes %></span>
                                <span id='tom-thumbs-up-finish' class='fa fa-thumbs-up'></span>
                                <span id='tom-trash-finish' class='fa fa-trash'></span>
                            </li>
                        <% } %>
                    </ul>
                </section>
                        
                <section id="stephenContainerComplete">
                    <h2>Stephen Complete</h2>
                    <ul class="stephenCompleteList">
                        <% for (let i=0; i < stephenBacklogComplete.length; i++ ) {%>
                            <li class ='stephenList'>
                                <span><%= stephenBacklogComplete[i].name %></span>
                                <span><%= stephenBacklogComplete[i].platform %></span>
                                <span><%= stephenBacklogComplete[i].likes %></span>
                                <span id='stephen-thumbs-u-finish' class='fa fa-thumbs-up'></span>
                                <span id='stephen-trash-finish' class='fa fa-trash'></span>
                            </li>
                        <% } %>
                    </ul>
                </section>
                
                <section id="seanContainerComplete">
                    <h2>Sean Complete</h2>
                    <ul class="seanCompleteList">
                        <% for (let i=0; i < seanBacklogComplete.length; i++ ) {%>
                            <li class ='seanList'>
                                <span><%= seanBacklogComplete[i].name %></span>
                                <span><%= seanBacklogComplete[i].platform %></span>
                                <span><%= seanBacklogComplete[i].likes %></span>
                                <span id='sean-thumbs-up-finish' class='fa fa-thumbs-up'></span>
                                <span id='sean-trash-finish' class='fa fa-trash'></span>
                            </li>
                        <% } %>
                    </ul>
                </section>
            </section>

        </main>

        <script src="js/main.js"></script>
    </body>
</html>
